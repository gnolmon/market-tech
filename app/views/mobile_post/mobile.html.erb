<p id="notice"><%= notice %></p>


<div class="container">
<div class="center"></div>

</div>
<style type="text/css">
  .customcol{
  width: 14.2%;
}
  .custom{
    width: 80%;
    margin-left:10%;
    margin-right: 10%;
    height: 170px;
  }
</style>


<div class="row">
    <div class="card custom z-depth-3 green" >
      <b><h5>Điện thoại</h5></b>
      <div class="row white-text ">
        <% @mobiles.each do |mobile| %>
        <div class="col customcol center hoverable ">
            <div class="row ">
                <i class=" medium material-icons "><%= mobile.image_url %></i>
            </div>
            <div class="row ">
              <b><%= mobile.name %></b>
            </div>
        </div>
        <% end %>
      </div>
      <div class="row">
        <div class="card-panel z-depth-1">
            <div class="row z-depth-1">
                <div class="input-field col s2 green-text  ">
                <select >
                  <option value="" disabled selected>Địa điểm</option>
                  <option value="1">Toàn quốc</option>
                  <option value="2">Hà Nội</option>
                  <option value="3">Đà Nẵng</option>
                  <option value="4">Hồ Chí Minh</option>
                </select>
              </div>
              <div class="input-field col s2 green-text">
                <select >
                  <option value="" disabled selected>Tình trạng</option>
                  <option value="1">Mới 100%</option>
                  <option value="2">Như mới</option>
                  <option value="3">Cũ</option>
                  <option value="4">Khác</option>
                </select>
              </div>

              <div class="input-field col s2 green-text">
                <select >
                  <option value="" disabled selected>Ngày tạo</option>
                  <option value="1">1 ngày trước</option>
                  <option value="2">3 ngày trước</option>
                  <option value="3">1 tuần trước</option>
                  <option value="4">1 tháng trước</option>
                </select>
              </div>
              <div class="input-field col s2 green-text">
                  <select >
                    <option value="" disabled selected>Giá từ</option>
                    <option value="1">0</option>
                    <option value="2">50,000</option>
                    <option value="3">100,000</option>
                    <option value="4">300,000</option>
                    <option value="5">500,000</option>
                    <option value="6">1,000,000</option>
                    <option value="7">3,000,000</option>
                    <option value="8">5,000,000</option>
                    <option value="9">7,000,000</option>
                    <option value="10">10,000,000</option>
                    <option value="11">13,000,000</option>
                    <option value="12">15,000,000</option>
                    <option value="13">20,000,000</option>
                    <option value="14">50,000,000</option>
                    <option value="15">100,000,000</option>
                    <option value="16">300,000,000</option>
                    <option value="17">1,000,000,000</option>
                    <option value="18">Vô cùng</option>
                  </select>
              </div>
              <div class="input-field col s2 green-text">
                  <select >
                    <option value="" disabled selected>Đến</option>
                    <option value="1">0</option>
                    <option value="2">50,000</option>
                    <option value="3">100,000</option>
                    <option value="4">300,000</option>
                    <option value="5">500,000</option>
                    <option value="6">1,000,000</option>
                    <option value="7">3,000,000</option>
                    <option value="8">5,000,000</option>
                    <option value="9">7,000,000</option>
                    <option value="10">10,000,000</option>
                    <option value="11">13,000,000</option>
                    <option value="12">15,000,000</option>
                    <option value="13">20,000,000</option>
                    <option value="14">50,000,000</option>
                    <option value="15">100,000,000</option>
                    <option value="16">300,000,000</option>
                    <option value="17">1,000,000,000</option>
                    <option value="18">Vô cùng</option>
                  </select>
              </div>
              <div class="col s1 center-align">
                <a class="btn-floating btn-large waves-effect waves-light red">
                  <i class="material-icons">search</i>
                </a>
              </div>
              <div class="col s1 center">
                <a class="btn-floating btn-large waves-effect waves-light red">
                  <i class="material-icons">mode_edit</i>
                </a>
              </div>
              <div class="divider col s12"></div>
              </div>

            <div class="row center blue lighten-2 white-text z-depth-1">
              <div class="col s5 left-align">Tiêu đề</div>
              <div class="col s3 right-align">Ngày bắt đầu</div>
              <div class="col s1 left-align">Trả lời</div>
              <div class="col s1 right-align">Xem</div>
              <div class="col s2 right-align">Bài viết cuối</div>
            </div>

            <% @topics.each do |topic| %>
              <div class="row" style="height: 100px;">
                  <div class="col s5 left-align">
                    <div class="row">
                      <div class="col s12" style="display: block;">
                        <b><%= topic.title %></b>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col s12">
                        <div class="chip">
                          <%= topic.timestamp %>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col s3 right-align"><%= topic.price %> </div>
                  <div class="col s1 left-align"><%= topic.num_respond %> </div>
                  <div class="col s1 right-align"><%= topic.num_view %> </div>
                  <div class="col s2 right-align"><%= topic.last_user %> </div>
              </div>
              <div class="divider"></div>
            <% end %>
          </div>
        </div>


<script type="text/javascript">
    $(document).ready(function(){
    $('.collapsible').collapsible({
      accordion : false // A setting that changes the collapsible behavior to expandable instead of the default accordion style
    });
    $('.dropdown-button').dropdown({
      inDuration: 300,
      outDuration: 225,
      constrain_width: false, // Does not change width of dropdown to that of the activator
      hover: true, // Activate on hover
      gutter: 0, // Spacing from edge
      belowOrigin: false, // Displays dropdown below the button
      alignment: 'left' // Displays dropdown with edge aligned to the left of button
    }
  );
  });
 $(document).ready(function() {
    $('select').material_select();
  });

</script>
