<p id="notice"><%= notice %></p>

<h1>Listing Topics</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Category</th>
      <th>Location</th>
      <th>Type post</th>
      <th>Timestamp</th>
      <th>Title</th>
      <th>Content</th>
      <th>Price</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.user_id %></td>
        <td><%= topic.category_id %></td>
        <td><%= topic.location_id %></td>
        <td><%= topic.type_post %></td>
        <td><%= topic.timestamp %></td>
        <td><%= topic.title %></td>
        <td><%= topic.content %></td>
        <td><%= topic.price %></td>
        <td><%= topic.image_url %></td>
        <td><%= link_to 'Show', topic %></td>
        <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
        <td><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Topic', new_topic_path %>
